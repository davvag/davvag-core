{
    "name" : "app-handler",
    "description":"Vue.JS Plugin for Soss Router",
    "author":"Lasitha Senanayake",
    "version" : "0.1",
    "gitUrl" : "",
    "resources": {
        "files":[
            {
                "type" : "mainScript",
                "location" : "script.js"
            }
        ]
    },
    "serviceHandler" : {
        "file": "service.php",
        "class": "appService",
        "methods" : {
            "Save" : {
                "method" : "POST"
            },
            "SaveProduct": {
                "method" : "POST"
            },
            "Like": {
                "method" : "POST"
            },
            "Favorite": {
                "method" : "POST"
            },"allProducts" : {
                "method" : "GET",
                "parameters": ["page","size","pid","q"]
