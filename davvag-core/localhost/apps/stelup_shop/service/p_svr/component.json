{
    "name" : "app-handler",
    "description":"Vue.JS Plugin for Soss Router",
    "author":"Lasitha Senanayake",
    "version" : "0.1",
    "gitUrl" : "",
    "resources": {
        "files":[
            {
                "type" : "mainScript",
                "location" : "script.js"
            }
        ]
    },
    "serviceHandler" : {
        "file": "service.php",
        "class": "appService",
        "methods" : {
            "Follow" : {
                "method" : "POST"
            },"Profile":{
                "method":"GET",
                "parameters":["id"]
            },"allProducts" : {
