                "parameters": ["page","size","pid","id","tid"]
            },
            "SendMessage":{
                "method" : "POST"
            },"Messages" : {
                "method" : "GET",
                "parameters": ["id","page","size","lastid"]
            }

        }
    },
    "transformers": {
        
    }
    
}